# 构建阶段
FROM node:18-alpine as build

WORKDIR /app

# 复制package*.json文件
COPY package*.json ./

# 安装依赖
RUN npm install

# 复制应用代码
COPY . .

# 设置API访问路径
ENV VITE_API_URL=http://api:5000

# 构建应用
RUN npm run build

# 部署阶段
FROM nginx:alpine

# 配置Nginx
COPY ./docker/nginx.conf /etc/nginx/conf.d/default.conf

# 从构建阶段复制构建结果
COPY --from=build /app/dist /usr/share/nginx/html

# 端口
EXPOSE 80

# 启动Nginx
CMD ["nginx", "-g", "daemon off;"]
